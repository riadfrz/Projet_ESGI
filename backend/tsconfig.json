{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    // Alias paths
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "@template-emails/*": [
        "./template-emails/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../shared/**/*",
    "src/index.d.ts",
    "prisma/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}