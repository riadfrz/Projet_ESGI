model Badge {
    id          String   @id @default(uuid())
    name        String   @unique
    description String?
    icon        String?
    ruleType    String
    ruleValue   Float
    points      Int      @default(0)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    // Relations
    userBadges UserBadge[]

    @@map("badges")
}
