{
  "name": "@projet-esgi/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "email": "email dev --dir src/emails --port 3050",
    "build": "tsc -b",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "prisma:generate": "prisma generate --schema=prisma/schema",
    "prisma:migrate": "prisma migrate dev --schema=prisma/schema",
    "prisma:migrate:test": "dotenv -e .env.test -- prisma migrate dev --schema=prisma/schema",
    "prisma:format": "prisma format --schema=prisma/schema",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:all": "prisma format --schema=prisma/schema && prisma generate --schema=prisma/schema && prisma migrate dev --schema=prisma/schema && tsx prisma/seed.ts",
    "prisma:docker:generate": "docker exec -it app-cfp-backend-dev sh -c \"cd /app/backend && pnpm prisma generate --schema=prisma/schema\"",
    "prisma:docker:all": "docker exec -it app-cfp-backend-dev sh -c \"cd /app/backend && pnpm prisma format --schema=prisma/schema && pnpm prisma generate --schema=prisma/schema && pnpm prisma migrate dev --name docker-init --schema=prisma/schema && pnpm tsx prisma/seed.ts\"",
    "prisma:studio": "prisma studio --schema=prisma/schema",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" --config .prettierrc"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@fastify/cors": "^10.0.1",
    "@prisma/client": "^6.1.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@react-email/components": "^0.0.31",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "dotenv-cli": "^7.4.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "react": "^18.3.1",
    "react-email": "^3.0.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}