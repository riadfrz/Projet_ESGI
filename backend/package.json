{
  "name": "@projet-esgi/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "email": "email dev --dir src/emails --port 3050",
    "build": "tsc -b",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:test": "dotenv -e .env.test -- prisma migrate dev",
    "prisma:format": "prisma format",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:all": "prisma format && prisma generate && prisma migrate dev && tsx prisma/seed.ts",
    "prisma:docker:generate": "docker exec -it app-cfp-backend-dev sh -c \"cd /app/backend && pnpm prisma generate\"",
    "prisma:docker:all": "docker exec -it app-cfp-backend-dev sh -c \"cd /app/backend && pnpm prisma format && pnpm prisma generate && pnpm prisma migrate dev --name docker-init && pnpm tsx prisma/seed.ts\"",
    "prisma:studio": "prisma studio",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" --config .prettierrc",
    "test": "dotenv -e .env.test -- jest --runInBand",
    "test:watch": "dotenv -e .env.test -- jest --watch",
    "test:coverage": "dotenv -e .env.test -- jest --coverage"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@prisma/client": "^6.1.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0"
  },
  "devDependencies": {
    "@react-email/components": "^0.0.31",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "dotenv-cli": "^7.4.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "react": "^18.3.1",
    "react-email": "^3.0.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
